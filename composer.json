{
    "name": "td512/cpanel-whm-api",
    "description": "Manage cPanel/WHM servers with PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shaharia Azam",
            "email": "shaharia.azam@gmail.com"
        },
        {
            "name": "Theo Morra",
            "email": "theo@theom.nz"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "guzzlehttp/psr7": "^1.4",
        "php-http/client-implementation": "^1.0",
        "td512/guzzle6-adapter": ">=1.1"
    },
    "autoload": {
        "psr-4": {
            "Chase\\cPanelWHM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chase\\cPanelWHM\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^4.8",
        "php-http/mock-client": "^1.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts":{
        "phpcs": "vendor/bin/phpcs --standard=psr2 src/",
        "phpunit": "vendor/bin/phpunit"
    }
}
